<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_problems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appuptechnologies.instantremedy.ProblemsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/problems_text"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_orange_light"
        android:layout_marginLeft="40dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/problems_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/problems_list">

    </android.support.v7.widget.RecyclerView>
        <Button
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:text="I dont find my problem here..."
            android:id="@+id/problems_button"
            android:textColor="@android:color/white"
            android:background="#8F7BD3"/>

    </LinearLayout>

</RelativeLayout>
