<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appuptechnologies.instantremedy">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/remedy"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity android:name="com.appuptechnologies.instantremedy.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.appuptechnologies.instantremedy.ProblemsActivity" />
        <activity android:name="com.appuptechnologies.instantremedy.RemedyActivity" />
        <activity android:name="com.appuptechnologies.instantremedy.QueryActivity" />
        <activity android:name="com.appuptechnologies.instantremedy.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>